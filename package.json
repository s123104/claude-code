{
  "name": "claude-code-zh-tw-docs",
  "version": "3.5.0",
  "description": "Claude Code 繁體中文文件整合專案 - 完整的 Claude Code 與 Cursor AI 整合說明書集合",
  "main": "index.js",
  "scripts": {
    "start": "npx http-server . -p 3000 -o index.html",
    "dev": "npx http-server . -p 8080 -o",
    "sync:index": "node scripts/sync-index-docs.js",
    "sync:changelog": "node scripts/sync-changelog.js",
    "sync:projects": "bash scripts/batch-sync-projects.sh",
    "sync:all": "npm run sync:projects && npm run sync:index",
    "validate": "bash scripts/validate-docs.sh --no-external",
    "validate:full": "bash scripts/validate-docs.sh",
    "update:docs": "bash scripts/update-all-docs.sh",
    "update:versions": "bash scripts/sync-versions.sh",
    "docs:serve": "npx http-server . -p 3000 -o index.html",
    "lint": "eslint scripts/*.js --ignore-pattern 'scripts/doc-sync/*'",
    "format": "prettier --write 'scripts/*.js' 'docs/*.md'",
    "install-claude": "npm install -g @anthropic-ai/claude-code",
    "setup:hooks": "bash scripts/setup-git-hooks.sh",
    "deploy": "gh-pages -d .",
    "test": "npm run validate"
  },
  "keywords": [
    "claude-code",
    "anthropic",
    "ai",
    "coding-assistant",
    "cursor",
    "documentation",
    "traditional-chinese",
    "zh-tw",
    "mcp",
    "subagents",
    "automation"
  ],
  "author": "Claude Code 中文社群",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/s123104/claude-code.git"
  },
  "bugs": {
    "url": "https://github.com/s123104/claude-code/issues"
  },
  "homepage": "https://s123104.github.io/claude-code/",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^6.0.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "http-server": "^14.1.1",
    "gh-pages": "^6.0.0",
    "markdown-link-check": "^3.11.2",
    "nodemon": "^3.0.1"
  },
  "peerDependencies": {
    "@anthropic-ai/claude-code": ">=6.0.0"
  },
  "config": {
    "update_interval": "daily",
    "validate_on_commit": true,
    "auto_sync_enabled": true,
    "claude_code_version": "latest"
  },
  "claude-code": {
    "project_type": "documentation",
    "language": "zh-TW",
    "repositories": [
      "SuperClaude_Framework",
      "agents",
      "awesome-claude-code",
      "claude-code-guide",
      "claudecodeui",
      "BPlusTree3",
      "claude-code-spec",
      "ccusage",
      "vibe-kanban",
      "context-engineering-intro",
      "contains-studio-agents",
      "claude-code-security-review"
    ],
    "mcp_servers": [
      "context7",
      "memory",
      "puppeteer",
      "time",
      "fetch"
    ],
    "automation": {
      "enabled": true,
      "update_frequency": "0 */6 * * *",
      "quality_check": true,
      "auto_deploy": true
    }
  }
}
